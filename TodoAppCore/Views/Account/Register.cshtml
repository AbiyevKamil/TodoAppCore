@model RegisterModel;
@{
    ViewData["Title"] = "Create Account";
}

<div>
    @if (ViewData["HasError"] != null)
    {
        <div asp-validation-summary="All" class="alert alert-danger" role="alert">
        </div>
    }
    <h3 class="text-center">Register</h3>
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input class="form-control" asp-for="Email" placeholder="Enter email">
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input class="form-control" asp-for="Password" placeholder="Enter Password">
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RePassword">Password again</label>
            <input class="form-control" asp-for="RePassword" placeholder="Enter password again">
            <span asp-validation-for="RePassword" class="form-text text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <button type="submit" class="mt-3 btn btn-dark">Register</button>
        </div>
    </form>
</div>


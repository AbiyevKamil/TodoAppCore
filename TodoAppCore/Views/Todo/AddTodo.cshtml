@model AddTodoModel
@{
    ViewData["Title"] = "AddTodo";
}

<div>
    @if (ViewData["HasError"] != null)
    {
            <div asp-validation-summary="All" class="alert alert-danger" role="alert">
            </div>
    }
    <h3 class="text-center">Add Todo</h3>
    <form asp-action="AddTodo" asp-controller="Todo" method="post">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title" placeholder="Enter title">
            <span asp-validation-for="Title" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content">Password</label>
            <input class="form-control" asp-for="Content" placeholder="Enter Password">
            <span asp-validation-for="Content" class="form-text text-danger"></span>
        </div>
        <div class="d-flex align-items-center justify-content-center">
            <button type="submit" class="mt-3 btn btn-dark">Add</button>
        </div>
    </form>
</div>




@model DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="card mb-2">
    @if (@Model.IsCompleted)
    {
        <div class="card-header">
            <span class="text-success">Completed</span>
        </div>
    }
    else
    {
        <div class="card-header">
            <span class="text-danger">Not completed</span>
            <p class="card-text float-end small">@Model.CreatedDate.ToString("yyyy MMMM dd")</p>
        </div>
    }
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p>@Model.Content</p>
            <div class="d-flex align-items-center justify-content-between">
                @if (!Model.IsDeleted)
                {
                    <form asp-controller="Todo" asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden"/>
                        <button class="btn btn-sm btn-dark">
                            Delete
                        </button>
                    </form>
                }
                @if (!Model.IsCompleted)
                {
                    <form asp-controller="Todo" asp-action="Done" method="post">
                        <input asp-for="Id" type="hidden"/>
                        <button class="btn btn-sm btn-success">
                            Done
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

